<div class="container mt-5">
    <div class="d-flex bd-highlight mb-3">
        <div class="me-auto p-2 bd-highlight">
            <h2 class="mb-4">Cadastro de Clientes</h2>
        </div>
        <div class="p-2 bd-highlight">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item active" aria-current="page">Cadastro de Clientes</li>
                    <li class="breadcrumb-item"><a href="/listar">Lista de Clientes</a></li>
                </ol>
            </nav>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <form class="row g-3" action="/cadastrar-cliente" method="POST">
                <div class="col-md-5">
                    <label class="form-label" for="nome">Nome</label>
                    <input type="text" class="form-control" id="nome" name="nome" placeholder="Digite seu nome">
                </div>
                <div class="col-md-2">
                    <label class="form-label" for="cep">CEP</label>
                    <input type="text" class="form-control" id="cep" name="cep" placeholder="Digite seu CEP">
                </div>
                <div class="col-5">
                    <label class="form-label" for="endereco">Endereço</label>
                    <input type="text" class="form-control" id="endereco" name="endereco"
                        placeholder="Digite seu endereço">
                </div>
                <div class="col-4">
                    <label class="form-label" for="bairro">Bairro</label>
                    <input type="text" class="form-control" id="bairro" name="bairro" placeholder="Digite seu bairro">
                </div>
                <div class="col-md-4">
                    <label class="form-label" for="cidade">Cidade</label>
                    <input type="text" class="form-control" id="cidade" name="cidade" placeholder="Digite sua cidade">
                </div>
                <div class="col-md-4">
                    <label class="form-label" for="estado">Estado</label>
                    <input type="text" class="form-control" id="estado" name="estado" placeholder="Digite seu estado">
                </div>
                <div class="col-md-12">
                    <label class="form-label" for="observacoes">Observações</label>
                    <textarea class="form-control" id="observacoes" name="observacoes" rows="3"
                        placeholder="Adicione quaisquer observações adicionais aqui"></textarea>
                </div>
                <div class="col-12 d-flex justify-content-end">
                    <button type="submit" class="btn btn-outline-success">Salvar</button>
                </div>
            </form>
        </div>
    </div>
</div>